<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkgrey"
    tools:context=".activities_firebase.AdminLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="fill_vertical"
        android:padding="30dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/simpleAdminText"
            android:layout_height="59dp"
            android:text="Admin Login"
            android:textColor="@color/olive"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/basicTextView"
            android:textColor="@color/lightgrey"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Please input the credentials below to login"
            android:textStyle="italic"
            android:textAlignment="center" />

        <TextView
            style="@style/TextView"
            android:id="@+id/adminloginEmail"
            android:layout_height="42dp"
            android:text="Email "
            android:layout_width="match_parent" />

        <EditText
            style="@style/EditText"
            android:id="@+id/adminloginEmailEditText"
            android:layout_height="45dp"
            android:ems="20"
            android:inputType="textPersonName"
            android:layout_width="match_parent" />

        <TextView
            style="@style/TextView"
            android:id="@+id/adminloginPassword"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_weight="0.04" />

        <EditText
            style="@style/EditText"
            android:id="@+id/adminloginPasswordEditText"
            android:layout_height="46dp"
            android:ems="20"
            android:inputType="textWebPassword"
            android:layout_width="match_parent" />

        <TextView
            android:layout_height="47dp"
            android:text="Already Registered? Login here"
            android:textColor="@color/lightgrey"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="231dp" />

        <Button
            style="@style/Button"
            android:id="@+id/adminloginButton"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:text="Sign In" />

        <ProgressBar
            android:id="@+id/adminloginprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
