<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkgrey"
    tools:context=".activities_firebase.StudentLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="fill_vertical"
        android:padding="30dp"
        android:weightSum="1">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/simpleText"
            android:layout_height="47dp"
            android:text="Student Login"
            android:textColor="@color/olive"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="231dp" />

        <TextView
            android:id="@+id/basicTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please input valid credentials below to login"
            android:textColor="@color/lightgrey"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="0.04" />

        <TextView
            style="@style/TextView"
            android:id="@+id/studentloginEmail"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_weight="0.05" />

        <EditText
            style="@style/EditText"
            android:id="@+id/studentloginEmailEditText"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textPersonName"
            android:layout_width="match_parent" />

        <TextView
            style="@style/TextView"
            android:id="@+id/studentloginPassword"
            android:layout_width="385dp"
            android:text="Password"
            android:layout_height="wrap_content"
            android:layout_weight="0.06" />

        <EditText
            style="@style/EditText"
            android:id="@+id/studentPasswordEditText"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="textWebPassword"
            android:layout_width="match_parent" />

        <TextView
            android:layout_height="47dp"
            android:text="Already Registered? Login here"
            android:textColor="@color/lightgrey"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="231dp" />

        <Button
            style="@style/Button"
            android:id="@+id/studentloginButton"
            android:layout_width="153dp"
            android:layout_height="51dp"
            android:text="Sign In" />

        <ProgressBar
            android:id="@+id/studentloginProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
